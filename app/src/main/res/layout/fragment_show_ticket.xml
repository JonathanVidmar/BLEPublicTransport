<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lth.thesis.blepublictransport.ShowTicketFragment">

    <TextView
        android:id="@+id/validTicketTitle"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ticket "
        android:textColor="@color/colorPrimaryText"
        android:textSize="50sp"
        android:layout_margin="20dp" />
    <TextView
        android:id="@+id/validTicketCounterText"
        android:layout_below="@+id/validTicketTitle"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valid countdown:"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <TextView
        android:id="@+id/validTicketCounter"
        android:layout_below="@+id/validTicketCounterText"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valid countdown:"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_margin="20dp"/>

</RelativeLayout>
