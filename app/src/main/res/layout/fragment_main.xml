<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar"
    tools:context="com.compscitutorials.basigarcia.navigationdrawervideotutorial.GalleryFragment">

    <TextView
        android:id="@+id/found_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/station_no_nearby_text"
        android:textColor="#111"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/locationItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/found_label" />
</RelativeLayout>