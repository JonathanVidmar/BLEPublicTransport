<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar"
    tools:context="com.compscitutorials.basigarcia.navigationdrawervideotutorial.GalleryFragment"
    >

    <TextView
        android:id="@+id/found_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No stations near you"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="#111"
        android:layout_marginTop="140px"
        android:gravity="center"
        />
    <ListView
        android:id="@+id/locationItems"
        android:layout_below="@+id/found_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
</RelativeLayout>