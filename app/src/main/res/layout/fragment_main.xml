<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.compscitutorials.basigarcia.navigationdrawervideotutorial.GalleryFragment">

    <TextView
            android:id="@+id/found_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No stations near you"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:textColor="#111"
            />

    <ListView
            android:id="@+id/locationItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/found_label" />
</RelativeLayout>